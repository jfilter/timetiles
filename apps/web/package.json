{
  "name": "web",
  "description": "The web application for TimeTiles, providing the main user interface and data exploration features.",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "./scripts/job-runner.sh & next dev --turbopack",
    "dev:debug": "LOG_LEVEL=debug next dev --turbopack",
    "build": "payload generate:types --silent && next build",
    "build:compile": "payload generate:types --silent && next build --experimental-build-mode compile",
    "start": "next start",
    "lint": "eslint app lib components tests scripts --ext .ts,.tsx,.js,.jsx --cache --format json --output-file .lint-results.json; eslint app lib components tests scripts --ext .ts,.tsx,.js,.jsx --cache",
    "format": "eslint app lib components tests scripts --ext .ts,.tsx,.js,.jsx --cache --fix --quiet && prettier --write . --log-level error",
    "typecheck": "tsx ../../scripts/typecheck-with-json.ts",
    "check:ai": "tsx scripts/check-summary.ts",
    "payload": "payload",
    "payload:generate": "tsx scripts/generate-payload.ts",
    "payload:migrate": "payload migrate",
    "payload:migrate:create": "payload migrate:create",
    "payload:validate": "tsx scripts/validate-types.ts",
    "seed": "dotenv -e ../../.env -e .env.local -- tsx scripts/seed.ts",
    "test": "vitest run",
    "test:ai": "tsx scripts/test-ai.ts",
    "test:silent": "vitest run --reporter=basic --silent",
    "test:debug": "LOG_LEVEL=debug vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage --coverage.reportOnFailure=true",
    "test:coverage:summary": "tsx scripts/coverage-summary.ts",
    "test:coverage:check": "tsx scripts/coverage-summary.ts --threshold 80",
    "setup:e2e-db": "dotenv -e .env.local -- tsx scripts/e2e-setup-database.ts",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug --headed",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "openapi:generate": "tsx scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@cfworker/json-schema": "^4.1.1",
    "@payloadcms/db-postgres": "^3.71.1",
    "@payloadcms/email-nodemailer": "^3.71.1",
    "@payloadcms/next": "^3.71.1",
    "@payloadcms/richtext-lexical": "^3.71.1",
    "@payloadcms/ui": "3.71.1",
    "@tanstack/react-query": "^5.90.17",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@timetiles/assets": "workspace:*",
    "@timetiles/ui": "workspace:*",
    "@types/archiver": "^7.0.0",
    "@types/maplibre-gl": "^1.14.0",
    "@types/node-geocoder": "^4.2.6",
    "@types/papaparse": "^5.5.2",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "archiver": "^7.0.1",
    "franc": "^6.2.0",
    "graphql": "^16.12.0",
    "lru-cache": "^11.2.4",
    "lucide-react": "^0.562.0",
    "maplibre-gl": "^5.16.0",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "node-geocoder": "^4.4.1",
    "nodemailer": "^7.0.12",
    "nuqs": "^2.8.6",
    "papaparse": "^5.5.3",
    "payload": "^3.71.1",
    "pg": "^8.17.1",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.3",
    "quicktype-core": "^23.2.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-map-gl": "^8.1.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "uuid": "^11.1.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "yaml": "^2.8.2",
    "zod": "^3.25.76",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@timetiles/eslint-config": "workspace:*",
    "@timetiles/typescript-config": "workspace:*",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.5",
    "eslint": "^9.39.2",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.12.7",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
