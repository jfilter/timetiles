{
  "name": "web",
  "description": "The web application for TimeTiles, providing the main user interface and data exploration features.",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:debug": "LOG_LEVEL=debug next dev --turbopack",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm payload:watch\"",
    "build": "payload generate:types --silent && next build",
    "build:compile": "payload generate:types --silent && next build --experimental-build-mode compile",
    "build:generate": "next build --experimental-build-mode generate",
    "build:local": "dotenv -e .env.local -- pnpm run build",
    "start": "next start",
    "lint": "eslint app lib components tests scripts . --ext .ts,.tsx,.js,.jsx --cache",
    "format": "eslint app lib components tests scripts . --ext .ts,.tsx,.js,.jsx --cache --fix --quiet && prettier --write . --log-level error",
    "typecheck": "tsc --noEmit",
    "check:ai": "tsx scripts/check-summary.ts",
    "payload": "payload",
    "payload:generate": "tsx scripts/generate-payload.ts",
    "payload:migrate": "payload migrate",
    "payload:migrate:create": "payload migrate:create",
    "payload:validate": "tsx scripts/validate-types.ts",
    "seed": "tsx scripts/seed.ts development users catalogs datasets events imports main-menu pages",
    "test": "NODE_OPTIONS=\"--no-warnings\" vitest run",
    "test:ai": "NODE_OPTIONS=\"--no-warnings\" vitest run --reporter=dot --reporter=json --outputFile.json=.test-results.json && tsx scripts/test-summary.ts",
    "test:silent": "NODE_OPTIONS=\"--no-warnings\" vitest run --reporter=basic --silent",
    "test:debug": "LOG_LEVEL=debug vitest run --reporter=verbose",
    "test:coverage": "NODE_OPTIONS=\"--no-warnings\" vitest run --coverage",
    "test:coverage:summary": "tsx ../../scripts/coverage-summary.ts",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug --headed",
    "test:unit": "NODE_OPTIONS=\"--no-warnings\" vitest run",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "test:db:validate": "node --import tsx/esm scripts/validate-test-db-schema.ts",
    "test:db:fix": "node --import tsx/esm scripts/validate-test-db-schema.ts --fix",
    "test:db:reset": "node --import tsx/esm scripts/validate-test-db-schema.ts --fix",
    "test:db:setup": "node --import tsx/esm scripts/setup-test-db.ts",
    "test:db:setup:force": "node --import tsx/esm scripts/setup-test-db.ts --force-reset"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@payloadcms/db-postgres": "^3.53.0",
    "@payloadcms/next": "^3.53.0",
    "@payloadcms/richtext-lexical": "^3.53.0",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/maplibre-gl": "^1.14.0",
    "@types/node-geocoder": "^4.2.6",
    "@types/papaparse": "^5.3.16",
    "@types/uuid": "^10.0.0",
    "@workspace/ui": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "graphql": "^16.11.0",
    "lucide-react": "^0.475.0",
    "maplibre-gl": "^5.6.1",
    "next": "^15.5.0",
    "next-themes": "^0.4.4",
    "node-geocoder": "^4.4.1",
    "nuqs": "^2.4.3",
    "papaparse": "^5.5.3",
    "payload": "^3.53.0",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "quicktype-core": "^23.2.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-map-gl": "^8.0.4",
    "sharp": "^0.34.2",
    "tsx": "^4.17.0",
    "uuid": "^11.1.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^10.0.0",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "eslint": "^9.19.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "playwright": "^1.54.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
