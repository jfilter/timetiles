{
  "extends": "@timetiles/typescript-config/nextjs.json",
  "compilerOptions": {
    "checkJs": false,
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@timetiles/ui/*": ["../../packages/ui/src/*"],
      "@timetiles/assets/*": ["../../packages/assets/*"],
      "@payload-config": ["./payload.config.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["vitest/globals", "node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo",
    "coverage",
    "playwright-report",
    "test-results",
    "dist",
    "app/(payload)/dashboard/importMap.js"
  ]
}
