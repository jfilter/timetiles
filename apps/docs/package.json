{
  "name": "docs",
  "description": "The documentation site for the TimeTiles project.",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm docs:api && next dev --port 3001",
    "build": "pnpm docs:api && next build",
    "docs:build": "pnpm docs:api && next build",
    "docs:api": "cd ../web && pnpm exec typedoc && node ../docs/scripts/clean-typedoc-output.js",
    "docs:api:watch": "nodemon --watch ../web/lib --ext ts --exec \"pnpm docs:api\"",
    "start": "next start --port 3001",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "export": "pnpm docs:api && next build",
    "format": "next lint --fix --quiet && prettier --write . --ignore-path ../../.prettierignore --log-level error"
  },
  "dependencies": {
    "@timetiles/assets": "workspace:*",
    "@workspace/ui": "workspace:*",
    "next": "^15.2.3",
    "nextra": "^4.3.0",
    "nextra-theme-docs": "^4.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.20.1",
    "glob": "^11.0.3",
    "nodemon": "^3.1.10",
    "typedoc": "^0.28.8",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.7.3"
  }
}
