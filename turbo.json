{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "PAYLOAD_SECRET",
    "NEXT_PUBLIC_PAYLOAD_URL",
    "CI",
    "GITHUB_ACTIONS",
    "VITEST",
    "VITEST_WORKER_ID",
    "LOG_LEVEL",
    "UPLOAD_DIR_IMPORT_FILES",
    "UPLOAD_DIR_MEDIA",
    "UPLOAD_TEMP_DIR",
    "TEST_ALL_BROWSERS",
    "E2E_DEBUG",
    "PGPASSWORD",
    "SKIP_EXTERNAL",
    "HTTP_CACHE_DIR",
    "HTTP_CACHE_MAX_SIZE",
    "HTTP_CACHE_TTL",
    "HTTP_CACHE_RESPECT_CACHE_CONTROL",
    "URL_FETCH_CACHE_DIR",
    "URL_FETCH_CACHE_MAX_SIZE",
    "URL_FETCH_CACHE_TTL",
    "URL_FETCH_CACHE_MAX_TTL",
    "URL_FETCH_CACHE_RESPECT_CACHE_CONTROL",
    "CACHE_BACKEND",
    "CACHE_DEFAULT_TTL",
    "CACHE_MAX_ENTRIES",
    "CACHE_MAX_SIZE_MB",
    "CACHE_DIR",
    "CACHE_CLEANUP_INTERVAL_MS",
    "BATCH_SIZE_DUPLICATE_ANALYSIS",
    "BATCH_SIZE_SCHEMA_DETECTION",
    "BATCH_SIZE_EVENT_CREATION",
    "BATCH_SIZE_DATABASE_CHUNK"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "content/**/*.{md,mdx}",
        "scripts/**/*.ts",
        "eslint.config.js",
        ".eslintrc*",
        ".eslintignore"
      ],
      "outputs": [".lint-results.json"]
    },
    "format": {
      "inputs": ["**/*.{ts,tsx,js,jsx,md,json,yml,yaml}"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": [
        "**/*.{ts,tsx}",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": [".typecheck-results.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results.json"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", ".nyc_output/**", "coverage.json"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
