{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "PAYLOAD_SECRET", 
    "CI",
    "VITEST",
    "GOOGLE_MAPS_API_KEY",
    "LOG_LEVEL",
    "GEOCODING_ENABLED",
    "GEOCODING_FALLBACK_ENABLED",
    "GEOCODING_PROVIDER_STRATEGY",
    "GEOCODING_REQUIRED_TAGS",
    "GEOCODING_CACHING_ENABLED",
    "GEOCODING_CACHE_TTL_DAYS",
    "OPENCAGE_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "inputs": ["**/*.{ts,tsx,js,jsx,md,json}"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "seed": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**"]
    },
    "docs:export": {
      "dependsOn": ["docs:build"],
      "outputs": ["out/**"]
    }
  }
}
