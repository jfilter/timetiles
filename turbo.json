{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "PAYLOAD_SECRET",
    "NEXT_PUBLIC_PAYLOAD_URL",
    "CI",
    "GITHUB_ACTIONS",
    "VITEST",
    "VITEST_WORKER_ID",
    "TEMP_DIR",
    "LOG_LEVEL",
    "GEOCODING_GOOGLE_MAPS_API_KEY",
    "GEOCODING_OPENCAGE_API_KEY",
    "GEOCODING_ENABLED",
    "GEOCODING_FALLBACK_ENABLED",
    "GEOCODING_CACHE_ENABLED",
    "GEOCODING_CACHE_TTL_DAYS",
    "UPLOAD_DIR_IMPORT_FILES",
    "UPLOAD_DIR_MEDIA",
    "UPLOAD_TEMP_DIR",
    "TEST_ALL_BROWSERS",
    "E2E_DEBUG",
    "PGPASSWORD",
    "SKIP_EXTERNAL",
    "HTTP_CACHE_DIR",
    "HTTP_CACHE_MAX_SIZE",
    "HTTP_CACHE_TTL",
    "HTTP_CACHE_RESPECT_CACHE_CONTROL",
    "CACHE_BACKEND",
    "CACHE_DEFAULT_TTL",
    "CACHE_MAX_ENTRIES",
    "CACHE_MAX_SIZE_MB",
    "CACHE_DIR",
    "CACHE_CLEANUP_INTERVAL_MS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.{ts,tsx,js,jsx}", "content/**/*.{md,mdx}", "scripts/**/*.ts"]
    },
    "format": {
      "inputs": ["**/*.{ts,tsx,js,jsx,md,json,yml,yaml}"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results.json"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", ".nyc_output/**", "coverage.json"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
