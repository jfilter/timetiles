{
  "name": "@workspace/prettier-config",
  "version": "0.0.0",
  "private": true,
  "description": "Shared Prettier configuration for the TimeTiles monorepo",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./ignore": "./.prettierignore"
  },
  "files": [
    "index.js",
    ".prettierignore"
  ],
  "scripts": {
    "lint": "eslint . --ext .js --cache",
    "typecheck": "echo 'No TypeScript files to check'",
    "format": "prettier --write . --log-level error"
  },
  "dependencies": {},
  "devDependencies": {},
  "peerDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13"
  },
  "engines": {
    "node": ">=18"
  }
}
