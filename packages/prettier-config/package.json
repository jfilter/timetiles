{
  "name": "@workspace/prettier-config",
  "version": "0.0.0",
  "private": true,
  "description": "Shared Prettier configuration for the TimeTiles monorepo",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./ignore": "./.prettierignore"
  },
  "files": [
    "index.js",
    ".prettierignore"
  ],
  "scripts": {
    "lint": "eslint . --ext .js --cache",
    "format": "eslint . --ext .js --cache --fix --quiet && prettier --write . --log-level error"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^9.39.1"
  },
  "peerDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13"
  },
  "engines": {
    "node": ">=18"
  }
}
