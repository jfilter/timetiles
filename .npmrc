# Strict dependency resolution (prevent phantom dependencies)
auto-install-peers=false
strict-peer-dependencies=true

# Hoisting patterns for better tool compatibility
# ESLint and Prettier plugins need to be hoisted to work correctly
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# CI optimization - prefer frozen lockfile
prefer-frozen-lockfile=true

# Store configuration
shamefully-hoist=false
