{
  "name": "timetiles",
  "description": "A data explorer for spatio-temporal data with custom metadata.",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:devops": "actionlint -shellcheck= && find . -name 'Dockerfile*' -type f | grep -v node_modules | xargs hadolint && find . \\( -name 'Makefile' -o -name '*.mk' \\) -type f | grep -v node_modules | xargs checkmake --config=.checkmake && find . -name '*.sh' -type f | grep -v node_modules | xargs shellcheck",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:coverage:merge": "tsx scripts/merge-coverage.ts",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "check": "turbo lint typecheck",
    "setup:git": "./scripts/setup-git.sh",
    "sonarcloud:fetch": "tsx scripts/fetch-sonarcloud-issues.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.0",
    "@commitlint/config-conventional": "^19.7.0",
    "@timetiles/eslint-config": "workspace:*",
    "@timetiles/typescript-config": "workspace:*",
    "chalk": "^5.6.2",
    "glob": "^11.1.0",
    "husky": "^9.1.7",
    "nyc": "^17.1.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=24"
  },
  "pnpm": {
    "overrides": {
      "pino": "9.7.0",
      "@headlessui/react": "^2.2.6",
      "@theguild/remark-mermaid": "^0.0.7",
      "next-mdx-remote": "^5.0.0",
      "form-data": "^4.0.4",
      "cross-spawn": "^7.0.6",
      "dompurify": "^3.2.3",
      "esbuild": "^0.25.0"
    }
  }
}
